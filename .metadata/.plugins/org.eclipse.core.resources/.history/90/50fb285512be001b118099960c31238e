package seGui;

import javafx.scene.paint.Color;
import javafx.scene.shape.Line;

public class Edge {
	private double startX;
	private double endX;
	private double startY;
	private double endY;
	private int cost;
	private Line line;
	public Edge(double startX, double endX, double startY, double endY, int cost) {
		super();
		this.startX = startX;
		this.endX = endX;
		this.startY = startY;
		this.endY = endY;
		this.cost = cost;
		line = new Line(this.startX,this.startY,this.endX,this.endY);
		line.setStroke(Color.MIDNIGHTBLUE);
        line.setStrokeWidth(3);
       
	}
	public Line getLine() {
		return line;
	}
	public double getStartX() {
		return startX;
	}
	public double getEndX() {
		return endX;
	}
	public double getStartY() {
		return startY;
	}
	public double getEndY() {
		return endY;
	}
	public int getCost() {
		return cost;
	}
	public void setCost(int cost) {
		this.cost = cost;
	}
	
	
	
}
